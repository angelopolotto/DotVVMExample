@viewModel DotVVMExample.ViewModels.CalculatorPageViewModel, DotVVMExample
@masterPage Views/Site.dotmaster

<dot:Content ContentPlaceHolderID="MainContent">


<p>
    Enter the first number: 
    <dot:TextBox Text="{value: Number1}" />
</p>
<p>
    Enter the second number: 
    <dot:TextBox Text="{value: Number2}" />
</p>
<p>
    <dot:Button Class="btn btn-lg btn-primary" Text="Calculate" Click="{command: Calculate()}" />
</p>
<p>
    The result is: {{value: Result}}
</p>

</dot:Content>

